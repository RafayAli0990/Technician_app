<MobileTab>

    rows: 5
    id: mobile_grid
    pos_hint: { "right": 1, "top": 1}
    row_force_default: True
    row_default_height: 50
    size_hint: (None, None)
    size: (300, 800)

    # grid row 1
    MDLabel:
        id: row_1
        text: "Select the area / line you want to mark:\n"
        padding_x: '10dp'
        font_style: "Title"
        pos_hint: { "right": 1, "top": 1}               
        size_hint: (None, None)
        size: (280,30)

    # grid row 2
    # Vehicle tracking zone
    BoxLayout:
        id: row_2
        orientation: "horizontal"    

        MDCheckbox:
            id: chk_vehicle_tracking
            size_hint: (None, 1)                    
            width: 40
            group: "area"
            active: True

        MDLabel:                                    
            halign: 'left'                                     
            text: "Vehicle tracking"                    
            font_style: "Body"

        MDRoundFlatIconButton:                                       
            text: "Clear"
            icon: "delete"
            pos_hint: {"center_y": .5}
            on_press: root.clear_area('vehicle_tracking')
        
        MDLabel: 
            text: ""
            size_hint_x: None
            width: 40

    # grid row 3
    # Detection line
    BoxLayout:
        orientation: "horizontal"    
        
        MDCheckbox:
            id: chk_detect
            size_hint: (None, 1)                    
            width: 40
            group: "area"
            
        MDLabel:
            text: "Detection line"
            font_style: "Body"

        MDRoundFlatIconButton:
            text: "Clear"
            icon: "delete"
            pos_hint: {"center_y": .5}
            on_press: root.clear_area('detect')

        MDLabel: 
            text: ""
            size_hint_x: None
            width: 40


    # grid row 4
    # Tint detect zone
    BoxLayout:
        orientation: "horizontal"    
        
        MDCheckbox:
            id: chk_tint
            size_hint: (None, 1)        
            width: 40
            group: "area"
            active : True
            
        MDLabel:
            text: "Tint detect zone"
            font_style: "Body"

        MDRoundFlatIconButton:
            text: "Clear"
            icon: "delete"
            pos_hint: {"center_y": .5}
            on_press: root.clear_area('tint')

        MDLabel: 
            text: ""
            size_hint_x: None
            width: 40

    # grid row 5
    # lprpoly zone
    BoxLayout:
        orientation: "horizontal"    
        
        MDCheckbox:
            id: chk_lprpoly
            size_hint: (None, 1)        
            width: 40
            group: "area"
            active : True
            
        MDLabel:
            text: "lpr zone"
            font_style: "Body"

        MDRoundFlatIconButton:
            text: "Clear"
            icon: "delete"
            pos_hint: {"center_y": .5}
            on_press: root.clear_area('lprpoly')

        MDLabel: 
            text: ""
            size_hint_x: None
            width: 40

