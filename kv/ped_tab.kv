#:kivy 2.0
<PedTab>
    
    rows: 11
    id: ped_grid
    pos_hint: { "right": 1, "top": 1}
    row_force_default: True
    row_default_height: 50
    size_hint: (None, None)
    size: (300, 800)

    # grid row 1
    MDLabel:
        id: row_1
        text: "Select the area / line you want to mark:\n"
        padding_x: '10dp'
        font_style: "Title"
        pos_hint: { "right": 1, "top": 1}               
        size_hint: (None, None)
        size: (280,30)

    # grid row 2
    # Green area grid line
    BoxLayout:
        id: row_2
        orientation: "horizontal"    

        MDCheckbox:
            id: chk_green
            size_hint: (None, 1)                    
            width: 40
            group: "area"
            active: True

        MDLabel:                                    
            halign: 'left'                                     
            text: "Green area"                    
            font_style: "Body"

        MDRoundFlatIconButton:                                       
            text: "Clear"
            icon: "delete"
            pos_hint: {"center_y": .5}
            on_press: root.clear_area('green')
        
        MDLabel: 
            text: ""
            size_hint_x: None
            width: 40

