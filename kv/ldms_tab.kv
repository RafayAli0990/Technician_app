#:kivy 2.0
<LdmsTab>
    rows: 11
    id: ldms_grid
    pos_hint: { "right": 1, "top": 1}
    row_force_default: True
    row_default_height: 50
    size_hint: (None, None)
    size: (300, 800)

    # grid row 1
    MDLabel:
        id: row_1
        text: "Select the area / line you want to mark:\n"
        padding_x: '10dp'
        font_style: "Title"
        pos_hint: { "right": 1, "top": 1}               
        size_hint: (None, None)
        size: (280,30)

    # grid row 2
    # Vehicle tracking zone
    BoxLayout:
        id: row_2
        orientation: "horizontal"
        MDCheckbox:
            id: chk_vehicle_tracking_ldms
            size_hint: (None, 1)                    
            width: 40
            group: "area"
            active: True

        MDLabel:                                    
            halign: 'left'                                     
            text: "vehicle tracking"                    
            font_style: "Body"

        MDRoundFlatIconButton:                                       
            text: "Clear"
            icon: "delete"
            pos_hint: {"center_y": .5}
            on_press: root.clear_area('vehicle')
        
        MDLabel: 
            text: ""
            size_hint_x: None
            width: 40

    # grid row 3
    # left area
